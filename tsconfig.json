{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"lib": ["es2017"],
		"inlineSourceMap": true,
		"declaration": true,
		"removeComments": false,
		"experimentalDecorators": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"stripInternal": true,
		"rootDir": "./src",
		"outDir": "./bin",
		"baseUrl": ".",
		"paths": {
			"#resolve/*": ["./src/resolve/*"],
			"#parse/*": ["./src/parse/*"],
			"#type/*": ["./src/types/*"],
			"#root/*": ["./src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.test.ts",
		"scripts/**/*"
	],
	"exclude": [
		"**/node_modules",
		"**/bin"
	]
}
